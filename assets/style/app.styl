$body-font-family = "Ubuntu", "Helvetica Neue", "Helvetica", "Open Sans", "Arial", sans-serif
$color-pack = false

// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'


.page
  @extend .fade-transition

html
  font-size: 16px
  overflow-x: hidden
  width: 100%

.container
  &.fluid
    padding: 0

.v-toolbar__content
  display: flex
  .v-toolbar__items
    flex-grow: 1
    justify-content: center
    display: flex

.fullheight
  min-height: 100vh

.bg-success
  background-color: #18bc97
.bg-info
  background-color: #3883c7

.application.theme--light
  background: transparent

.cursor-pointer
  cursor pointer
